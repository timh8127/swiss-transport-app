# Swiss OTD API Keys - Get from https://opentransportdata.swiss/
# Each service may require a separate API key registration

# OJP (Open Journey Planner) - Route planning
OTD_OJP_API_KEY=

# GTFS-RT - Real-time delays
OTD_GTFSRT_API_KEY=

# SIRI-SX - Service alerts and disruptions
OTD_SIRI_SX_API_KEY=

# DATEX II - Traffic situations (SOAP)
OTD_TRAFFIC_SITUATIONS_API_KEY=

# OCIT-C - Traffic light status
OTD_TRAFFIC_LIGHTS_API_KEY=

# Server Configuration
PORT=8000
HOST=0.0.0.0
DEBUG=false

# CORS - Comma-separated origins
CORS_ORIGINS=http://localhost:3000

# Timezone
TIMEZONE=Europe/Zurich
